/* pages/index/index.wxss */
page{background-color:#ffffff;}

.banner{height:80rpx;clear:both;position:relative;border-bottom:1px solid #e8e8e8;}
.banner .search{width:30rpx;height:30rpx;position:absolute;top:25rpx;left:40rpx;}
.banner .area{line-height:80rpx;font-size:30rpx;text-align:center;}
.banner .area image{width:24rpx;height:24rpx;}
.banner .scan{width:30rpx;height:30rpx;position:absolute;right:40rpx;top:25rpx;}

.swiper{margin-bottom:30rpx;width:750rpx;height:990rpx;}
.swiper .item{padding:40rpx 40rpx 0rpx;}
.swiper .item .title{font-size:36rpx;height:50rpx;}
.swiper .item .intro{font-size:30rpx;height:40rpx;line-height:40rpx;margin-bottom:30rpx;color:#999999;}
.swiper .item image{width:670rpx;height:830rpx;border-radius:20rpx;}

.channel-tips{margin:30rpx 40rpx;font-size:24rpx;color:#999999;}
.channel{margin:30rpx 40rpx;width:670rpx;height:100rpx;white-space:nowrap;}
.channel view{display:inline-block;margin-right:15rpx;}
.channel view image{width:100rpx;height:100rpx;border-radius:15rpx;}
.channel view:last-child{margin-right:0rpx;}

.vr-tips{margin:10rpx 40rpx 30rpx;padding-top:20rpx;font-size:30rpx;color:#333333;border-top:1px solid #e8e8e8;}
.vr{margin:30rpx auto;width:100%;height:300rpx;}
.vr view{width:670rpx;margin:0rpx auto;}
.vr view image{width:670rpx;height:300rpx;border-radius:20rpx;}


.active-tips{margin:10rpx 40rpx 30rpx;padding-top:20rpx;font-size:30rpx;color:#333333;border-top:1px solid #e8e8e8;}
.active{margin:30rpx 40rpx;}
.active view image{border-radius:20rpx;}
.active view:nth-child(1) image{width:670rpx;height:300rpx;}
.active view:nth-child(2){display:inline-block;margin-right:10rpx;}
.active view:nth-child(3){display:inline-block;}
.active view:nth-child(2) image{width:330rpx;height:200rpx;}
.active view:nth-child(3) image{width:330rpx;height:200rpx;}

.theme-tips{margin:10rpx 40rpx 30rpx;padding-top:20rpx;font-size:30rpx;color:#333333;border-top:1px solid #e8e8e8;}
.theme{width:670rpx;margin:30rpx 40rpx;clear:both;overflow:hidden;}
.theme .image-tips{width:670rpx;height:280rpx;margin-bottom:15rpx;border-radius:20rpx;}
.theme .item{float:left;width:325rpx;height:330rpx;}
.theme .item:nth-child(odd){margin-right:20rpx;}
.theme .item image{width:100%;height:220rpx;border-radius:20rpx;}
.theme .item .name{font-size:28rpx;}
.theme .item .addr{font-size:24rpx;color:#999999;}


.picker{background-color:rgba(0,0,0,0.5);width:100vw;height:100vh;position:fixed;left:0rpx;top:0rpx;box-sizing:border-box;}
.picker picker-view{width:100%;height:400rpx;background-color:#ffffff;}
.picker .item{font-size:33rpx;padding:0rpx 10rpx;line-height:80rpx;height:80rpx;white-space:nowrap;}
.indicator{height:80rpx;}
.picker .control{background-color:#ffffff;text-align:center;padding:20rpx 0rpx;}
.picker .control view{width:150rpx;background-color:#0099ff;margin:0rpx auto;font-size:32rpx;line-height:60rpx;color:#ffffff;border-radius:10rpx;}
