/* pages/shop/detail.wxss */
.banner{width:100%;height:750rpx;}
.banner image{width:100%;height:750rpx;}

.shop{margin:40rpx;border-bottom:1px solid #e6e6e6;}
.shop .title{font-size:32rpx;color:#333333;}
.shop .type{font-size:26rpx;color:#999999;margin-top:26rpx;}
.shop .item{margin:30rpx 0rpx;width:100%;clear:both;position:relative;}
.shop .item image,.shop .item view{display:inline-block;}
.shop .item .icon{width:32rpx;height:32rpx;margin-right:40rpx;vertical-align:middle;}
.shop .item view{font-size:30rpx;color:#333333;line-height:32rpx;vertical-align:middle;}
.shop .item .right{width:20rpx;height:20rpx;position:absolute;right:0rpx;top:20rpx;}

.tab{font-size:32rpx;color:#333333;margin:60rpx 40rpx 0rpx;}
.content{margin:40rpx 40rpx 120rpx;font-size:28rpx;}

.pay{width:100%;line-height:88rpx;font-size:32rpx;background-color:rgba(50,200,205,0.9);color:#ffffff;text-align:center;position:fixed;bottom:0rpx;}

