
.head{
    background-color: #5e0403;
    height: 350rpx;
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 100;
}
.head .user{
    width: 50%;
    padding: 30rpx 0rpx 33rpx 40rpx;
    color: #ffffff;
}
.head .user .logo{
    width: 160rpx;
    height:160rpx;
    border-radius: 50%;
}

.head .wallet{
    position: absolute;
    right: 30rpx;
    top: 100rpx;
}
.head .wallet .create{
    text-align: center;
    width: 200rpx;
    height:60rpx;
    margin-bottom:20rpx;
    border: 1px solid #9f9d9d;
    float: right;
    font-size: 13px;
    line-height:60rpx;
    border-radius: 10rpx;
    color: #ffffff;
}
.head .wallet .money{
    clear: both;
    text-align: right;
    font-size: 26px;
    color: #FFDC35;
}

.control{
    display: flex;
    flex-direction: row;
    position: absolute;
    top: 270rpx;
}
.control view{
    width: 187rpx;
    height: 80rpx;
    text-align: center;
    border-right: 1rpx solid #ea734d;
    font-size: 13px;
    line-height: 80rpx;
    color: #ffffff;
    background-color: rgba(0, 0, 0, 0.2);
}
.control view:last-child{
    border-right: 1rpx solid transparent;
}
.control .chose{
    color: #000000;
    background-color: #ffffff;
}

scroll-view{
    padding-top: 370rpx;
    background-color: #ffffff;
}

.money-item{
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #e9e9e9;
    position: relative;
}
.money-item .money-in{
    color: #00A600;
    font-weight: bold;
    font-size: 18px;
}
.money-item .money-out{
    color: #ff0000;
    font-weight: bold;
    font-size: 18px;
}
.money-item .time{
    text-align: right;
    font-size: 14px;
    color: #999999;
}

.money-item .resend{
    position: absolute;
    border: 1px solid #5e0403;
    font-size: 13px;
    line-height: 20px;
    right: 20rpx;
    top: 10rpx;
    width: 120rpx;
    text-align: center;
    border-radius: 10rpx;
}

.message-item{
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #e9e9e9;
}
.message-item .message{
    font-size: 15px;

}
.message-item .time{
    text-align: right;
    font-size: 13px;
    color: #999999;
}
